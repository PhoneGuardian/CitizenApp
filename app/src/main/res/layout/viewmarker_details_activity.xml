<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_details"
            android:textAllCaps="true"
            style="@style/app_text_normal"
            />

        <View style="@style/divider_black"
            android:layout_marginBottom="@dimen/spacing_large"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/date"
                android:minEms="6"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_datetime"
                style="@style/app_text_normal_light"
                />
        </LinearLayout>

        <View style="@style/divider_gray"
            android:layout_marginBottom="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/type_colon"
                android:minEms="6"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/type_of_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/police"
                style="@style/app_text_normal_light"
                />

        </LinearLayout>

        <View style="@style/divider_gray"
            android:layout_marginBottom="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:minEms="6"
                android:text="@string/address"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_address"
                style="@style/app_text_normal_light"
                />
        </LinearLayout>

        <View style="@style/divider_gray"
            android:layout_marginBottom="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/description"
                android:minEms="6"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/description_of_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_event_descr"
                style="@style/app_text_normal_light"
                />
        </LinearLayout>

        <View style="@style/divider_gray"
            android:layout_marginBottom="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Anonymous tip:"
                android:minEms="9"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                style="@style/app_text_normal_light"
                />
        </LinearLayout>

        <View style="@style/divider_gray"
            android:layout_marginBottom="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:minEms="9"
                android:text="Location Accuracy:"
                style="@style/app_text_normal"
                />

            <TextView
                android:id="@+id/event_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                style="@style/app_text_normal_light"
                />

        </LinearLayout>

        <View style="@style/divider_gray" />

    </LinearLayout>
</ScrollView>