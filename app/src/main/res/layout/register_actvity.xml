    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".RegisterActivity"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_main"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="270dp"
                android:padding="@dimen/spacing_large"
                android:orientation="vertical"
                android:background="@drawable/bg_white_oval_overlay"
                >

                <TextView
                    android:id="@+id/signup_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    style="@style/app_name_header"
                    />

                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:hint="@string/username"
                    style="@style/signup_form_hint"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    >

                    <TextView
                        android:id="@+id/tv_register_mcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/et_register_phone_num"
                        style="@style/signup_form_base"
                        />

                    <EditText
                        android:id="@id/et_register_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_register_mcc"
                        android:hint="@string/phone_num"
                        android:inputType="phone"
                        style="@style/signup_form_hint"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/sign_up"
                        style="@style/button_rounded_transparent_normal"
                        />

                    <ProgressBar
                        android:id="@+id/spinner_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/btn_signup"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        style="?android:attr/progressBarStyleSmall"/>
                </RelativeLayout>
            </LinearLayout>
    </ScrollView>
    </RelativeLayout>
