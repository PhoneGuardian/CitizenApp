<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RegisterActivity"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        />
    <TextView
        android:id="@+id/home_screen_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/report_event_layout"
        android:text="@string/app_name"
        style="@style/app_name_header"

        />
    <LinearLayout
        android:id="@id/report_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_white_rect_overlay"
        >

        <ImageButton
            android:id="@+id/btn_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/warning_icon"
             />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="@string/report_event"
              android:paddingLeft="20sp"
              android:layout_row="0"
              android:layout_column="1"
              style="@style/home_text_base"
              />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_event_layout"
        android:layout_marginTop="@dimen/spacing_huge"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_white_rect_overlay"
        >
    <ImageButton
	        android:id="@+id/btn_map"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:background="@drawable/map_icon"
            android:layout_row="1"
            android:layout_column="0"
        />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/browse_map"
          android:paddingLeft="20sp"
          android:layout_row="1"
          android:layout_column="1"
          style="@style/home_text_base"

          />
    </LinearLayout>

</RelativeLayout>
