<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/frameLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="120dp"
		android:orientation="horizontal"
		android:background="@color/black"
		android:layout_gravity="center_horizontal">
		
         <LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@color/black"
			>
            
            <TextView
		       		android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left"
		            android:textSize="24.5sp"
		            android:text="@string/nearme"
		            android:textColor="@color/white"/>

            <ToggleButton
                android:id="@+id/btn_offon_near_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onToggleClicked"
                android:textOff="Off"
                android:textOn="On" />            
                
            <Spinner
                android:id="@+id/radius_near_me"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />

        </LinearLayout>
		
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/black"
		android:layout_gravity="center"
		android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_redzone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:button="@xml/red_checkbox"
            android:checked="true"
            android:onClick="onCheckboxClicked" />
        
        <CheckBox
            android:id="@+id/cb_orangezone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center|left"
            android:button="@xml/orange_checkbox" 
            android:checked="true"
            android:onClick="onCheckboxClicked"/>
        
        <CheckBox
            android:id="@+id/cb_yellowzone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center|left"
            android:button="@xml/yellow_checkbox"
            android:checked="true"
            android:onClick="onCheckboxClicked" />
        
    </LinearLayout>
    
</LinearLayout>

    <fragment
	android:id="@+id/mapf"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:layout_marginTop="120dp"
	class="com.google.android.gms.maps.SupportMapFragment"/>
    

</FrameLayout>