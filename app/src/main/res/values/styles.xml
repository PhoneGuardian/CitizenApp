<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_base">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="button_rounded_transparent_normal" parent="button_base">
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/btn_selector_oval_transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_rounded_transparent_thin" parent="button_base">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/btn_selector_oval_transparent_thin</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="app_name_header">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:paddingBottom">@dimen/spacing_huge</item>
    </style>

    <style name="app_text_normal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_text_normal_light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_text_large_light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="app_text_normal_light_gray">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="divider_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="divider_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>