<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"  tools:ignore="NewApi">

    <style name="app_name_header">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:paddingBottom">@dimen/spacing_huge</item>
    </style>


    <style name="app_text_small_light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="app_text_small_light_gray">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="app_text_normal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_text_normal_light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_text_large_light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="app_text_normal_light_gray">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="divider_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_light</item>
    </style>
    <style name="divider_gray_dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_dark</item>
    </style>
    <style name="divider_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>