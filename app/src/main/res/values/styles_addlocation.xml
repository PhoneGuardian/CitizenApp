<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="addlocation_single_search_item" parent="app_text_normal_light_gray">
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

    <style name="addlocation_ClearableAutoCompleteTextView" parent="app_text_normal_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:dropDownVerticalOffset">@dimen/spacing_tiny</item>
    </style>

    <style name="addlocation_date" parent="app_text_normal_light_gray">
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
    </style>

    <style name="addlocation_checkbox" parent="app_text_large_light">
        <item name="android:paddingLeft">@dimen/spacing_tiny</item>
        <item name="android:button">@drawable/checkbox_custom_selector</item>
    </style>

    <style name="addlocation_LineEditText" parent="app_text_normal_light">
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@drawable/checkbox_custom_selector</item>
    </style>

</resources>