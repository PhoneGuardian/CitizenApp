<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"  tools:ignore="NewApi">

    <style name="ClearableAutoCompleteTextView" parent="app_text_normal_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownVerticalOffset">@dimen/spacing_tiny</item>
        <item name="android:drawableLeft">@drawable/location_pin_gray</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>

    <style name="button_base">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="button_rounded_transparent_normal" parent="button_base">
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/btn_selector_oval_transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="button_rounded_transparent_thin" parent="button_base">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/btn_selector_oval_transparent_thin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_flat_gray_thin" >
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/button_selector_flat_gray</item>
    </style>

    <style name="button_cross" >
        <item name="android:background">@drawable/btn_selector_cross</item>
    </style>

    <style name="app_checkbox" parent="app_text_large_light">
        <item name="android:paddingLeft">@dimen/checkbox_padding_left</item>
        <item name="android:drawablePadding">@dimen/spacing_large</item>
        <item name="android:button">@drawable/checkbox_custom_selector</item>
    </style>

</resources>